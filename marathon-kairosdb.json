{
  "id": "kairos",
  "mem": 500,
  "cpus": 0.5,
  "env": {
    "CASS_HOSTS": "node-0.cassandra.mesos:9042",
    "REPFACTOR": "1"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/archlinux-kairosdb:master",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 0
        },
        {
          "containerPort": 4242,
          "hostPort": 0
        },
        {
          "containerPort": 2003,
          "hostPort": 0
        },
        {
          "containerPort": 2004,
          "hostPort": 0
        }
      ]
    }
  },
  "acceptedResourceRoles": [
    "slave_public"
  ],
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ]
}